{
  "name": "books-for-agents",
  "version": "2.0.0",
  "description": "Open source book summaries optimized for AI agents, served via MCP.",
  "type": "module",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev:worker": "npm run db:migrate:local && wrangler dev",
    "db:migrate": "wrangler d1 migrations apply books-for-agents-db",
    "db:migrate:local": "wrangler d1 migrations apply books-for-agents-db --local",
    "db:reindex": "curl -s -X POST https://booksforagents.com/_admin/reindex -H \"Authorization: Bearer $ADMIN_TOKEN\""
  },
  "keywords": [
    "mcp",
    "books",
    "ai",
    "agents",
    "knowledge-base",
    "llm",
    "model-context-protocol"
  ],
  "author": "Daniel Palmieri",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "typescript": "^5.7.3",
    "wrangler": "^4.0.0"
  }
}
